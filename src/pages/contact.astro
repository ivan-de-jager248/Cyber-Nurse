---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.vue';
import AnimatedElement from '../components/AnimatedElement.vue';
---

<Layout title="Contact Cyber Nurse | Get in Touch">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-[#007bff] to-[#28a745] text-white py-16">
    <div class="container mx-auto px-4">
      <AnimatedElement animation="fade" client:load>
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
          <p class="text-xl">We're here to help with any questions you might have</p>
        </div>
      </AnimatedElement>
    </div>
  </section>

  <div class="container mx-auto px-4 py-16">
    <div class="max-w-5xl mx-auto">
      <AnimatedElement animation="slide-up" triggerOnScroll={true} client:load>
        <div class="grid md:grid-cols-2 gap-12 mb-16">
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-6 text-primary-600">Get in Touch</h2>
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="bg-primary-100 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Address</h3>
                  <p class="text-gray-600">123 Healthcare Ave, Suite 456<br />San Francisco, CA 94102</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-primary-100 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Phone</h3>
                  <p class="text-gray-600">(555) 123-4567</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="bg-primary-100 p-3 rounded-full mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900">Email</h3>
                  <p class="text-gray-600">contact@cybernurse.com</p>
                </div>
              </div>
            </div>
            
            <h2 class="text-2xl font-bold mt-10 mb-6 text-primary-600">Office Hours</h2>
            <div class="space-y-2 text-gray-600">
              <p class="flex justify-between">
                <span>Monday - Friday:</span>
                <span>9:00 AM - 5:00 PM</span>
              </p>
              <p class="flex justify-between">
                <span>Saturday:</span>
                <span>10:00 AM - 2:00 PM</span>
              </p>
              <p class="flex justify-between">
                <span>Sunday:</span>
                <span>Closed</span>
              </p>
            </div>
          </div>
          
          <div class="bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-6 text-primary-600">Location</h2>
            <div class="bg-gray-200 rounded-lg h-64 mb-4 overflow-hidden">
              <!-- Replace with actual map embed code -->
              <img src="https://api.mapbox.com/styles/v1/mapbox/light-v10/static/pin-s+1A73E8(-122.4194,37.7749)/-122.4194,37.7749,13,0/600x400?access_token=YOUR_MAPBOX_TOKEN" 
                   alt="Map showing Cyber Nurse office location" 
                   class="w-full h-full object-cover"
                   width="600"
                   height="400" />
            </div>
            <p class="text-gray-600">
              Our office is conveniently located in downtown San Francisco, easily accessible by public transportation and with parking available nearby.
            </p>
          </div>
        </div>
      </AnimatedElement>

      <AnimatedElement animation="slide-up" triggerOnScroll={true} delay={0.2} client:load>
        <div class="bg-white p-8 rounded-lg shadow-lg">
          <h2 class="text-2xl font-bold mb-6 text-primary-600">Send Us a Message</h2>
          <ContactForm client:load />
        </div>
      </AnimatedElement>
    </div>
  </div>
</Layout>