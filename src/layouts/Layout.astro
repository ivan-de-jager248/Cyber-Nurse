---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Connect nurses with hospitals for staffing needs' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title} | Cyber Nurse</title>
  </head>
  <body>
    <header class="bg-white shadow-sm sticky top-0 z-50">
      <nav class="container h-16 flex items-center justify-between">
        <a href="/Cyber-Nurse" class="text-2xl font-bold text-primary-600">Cyber Nurse</a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex gap-6">
          <a href="/Cyber-Nurse/hospitals" class="text-gray-600 hover:text-gray-900 transition-colors">Hospitals</a>
          <a href="/Cyber-Nurse/nurses" class="text-gray-600 hover:text-gray-900 transition-colors">Nurses</a>
          <a href="/Cyber-Nurse/about" class="text-gray-600 hover:text-gray-900 transition-colors">About</a>
          <a href="/Cyber-Nurse/contact" class="text-gray-600 hover:text-gray-900 transition-colors">Contact</a>
        </div>
        
        <div class="hidden md:flex items-center gap-4">
          <a href="/Cyber-Nurse" class="text-gray-600 hover:text-gray-900 transition-colors">Login</a>
          <a href="/Cyber-Nurse" class="btn hover:scale-105 transition-transform">Sign Up</a>
        </div>
        
        <!-- Mobile Navigation Toggle -->
        <div class="md:hidden">
          <button id="mobile-menu-button" class="text-gray-600 hover:text-gray-900 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </nav>
      
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-white shadow-md py-4 absolute w-full z-50">
        <div class="container space-y-3">
          <a href="/Cyber-Nurse/hospitals" class="block text-gray-600 hover:text-gray-900 py-2 transition-colors">Hospitals</a>
          <a href="/Cyber-Nurse/nurses" class="block text-gray-600 hover:text-gray-900 py-2 transition-colors">Nurses</a>
          <a href="/Cyber-Nurse/about" class="block text-gray-600 hover:text-gray-900 py-2 transition-colors">About</a>
          <a href="/Cyber-Nurse/contact" class="block text-gray-600 hover:text-gray-900 py-2 transition-colors">Contact Us</a>
          <div class="pt-2 border-t border-gray-200 flex flex-col gap-2">
            <a href="/Cyber-Nurse" class="block text-gray-600 hover:text-gray-900 py-2 transition-colors">Login</a>
            <a href="/Cyber-Nurse" class="btn block text-center">Sign Up</a>
          </div>
        </div>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-900 text-white mt-20">
      <div class="container py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Cyber Nurse</h3>
            <p class="text-gray-400">Connecting healthcare professionals with opportunities.</p>
          </div>
          <div>
            <h4 class="text-sm font-semibold mb-4">For Nurses</h4>
            <ul class="space-y-2">
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Find Jobs</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Create Profile</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Resources</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold mb-4">For Hospitals</h4>
            <ul class="space-y-2">
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Post a Job</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Find Talent</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Pricing</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold mb-4">Company</h4>
            <ul class="space-y-2">
              <li><a href="/Cyber-Nurse/Cyber-Nurse/about" class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
              <li><a href="/Cyber-Nurse/Cyber-Nurse/contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
              <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Privacy Policy</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Cyber Nurse. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      document.addEventListener('DOMContentLoaded', () => {
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (menuButton && mobileMenu) {
          menuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
          });
        }
      });
    </script>
  </body>
</html>